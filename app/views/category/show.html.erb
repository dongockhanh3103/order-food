<div class="album py-5">
  <div class="row">
    <% @products.each do |product|%>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
           <img width="100%" height="255" src="<%= product.image %>" class="rounded" alt="food">
          <div class="card-body">
            <p class="card-text"><%=product.name%></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to "View", product_path(product.id), class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to "Edit", edit_product_path(product.id), class: "btn btn-sm btn-outline-secondary" %>
              </div>
              <small class="text-muted">9 mins</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>