
<div id="order__products">
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <label for="firstName">First name</label>
      <input type="text" class="form-control" id="firstName" placeholder="First name">
    </div>
    <div class="col-md-4 mb-3">
      <label for="lastName">Last name</label>
      <input type="text" class="form-control" id="lastName" placeholder="Last name">
    </div>
    <div class="col-md-4 mb-3">
      <label for="email">Email</label>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroupPrepend2">@</span>
        </div>
        <input type="text" class="form-control" id="email" placeholder="Email">
      </div>
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label for="address">Address</label>
      <input type="text" class="form-control" id="address" placeholder="Address">
    </div>

    <div class="col-md-2">
      <label for="voucherCode">Voucher Code</label>
      <input type="text" class="form-control" id="voucherCode" placeholder="Code" required>
    </div>

    <div class="col-md-2">
      <label for="submitVoucher" class="invisible" >Voucher Code</label>
      <button class="btn btn-warning" id="submitVoucher">Check your code</button>
      <span class="text-danger coupon-message" id="voucherMessage"></span>
    </div>
  </div>
  <ul class="list-group">
    <% session[:cart].each do |product|%>
      <li class="list-group-item d-flex justify-content-between align-items-center col-md-5">
        <%= product["name"]%>
        <span class="badge badge-primary badge-pill"><%= product["quantity"]%></span>
        <%= product["price"].to_f * product["quantity"].to_i %>$
      </li>
    <% end %>
  </ul>
  <div class="pt-4 pb-4">
    Total: <span id="total"><%= @total%></span>$
  </div>
  <button class="btn btn-primary mb-5" id="payment">Payment</button>
</div>